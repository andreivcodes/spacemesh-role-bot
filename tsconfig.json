{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "ESNext",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
